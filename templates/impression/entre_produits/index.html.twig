{% extends 'base.html.twig' %}

{% block title %}Hello EntreProduitsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>LISTES DES PRODUITS ENTRER✅</h1>

    <table border=1 onload="window.print">
        <tr>
        <th style="color:teal">NomProduits</th><th style="color:teal">TotaleEntrées</th>
        </tr>

        {% for cle in entrer %}
            <tr>
               <td>{{ cle.NomProduits }}</td>
               <td>{{ cle.Quantiter }}</td>
            </tr>
        {% endfor %}
    
    </table>
    <h1>Antananarivo le, 16 Mars 2022</h1>
    <button><a style="text-decoration":"none" href="{{ path('download_Entrer')}}">IMPRIMER</a></button>
    
</div>
{% endblock %}
